{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "ignorePatterns": ["src/assets", "src/mocks", "src/i18n"],
  "rules": {
    "react/prop-types": 0,
    "no-throw-literal": 0,
    "no_trailing_spaces": 0,
    "indent": ["error", 2],
    "max-len": ["error", 150]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
